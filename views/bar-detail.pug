extends layout

block content
  if bar 
    h1 Bar added: #{bar.name}
    p Full bar details:
    ul
      p <b>Name</b>: #{bar.name}
      p <b>Address</b>: #{bar.address}
      p <b>Postal Code</b>: #{bar.postalCode}
      p <b>smokingType</b>: #{bar.smokingType}
      p <b>Id</b>: #{bar._id}

  else 
   h1 We couldn't find this bar!
  script.
    console.log(!JSON.stringify(bar)})


